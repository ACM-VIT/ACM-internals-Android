<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ACM_app" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorBlue</item>
        <item name="colorPrimaryVariant">@color/colorBlueDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorItemBackground</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="popupMenuStyle">@style/ThemeOverlay.popupTheme</item>
        <item name="popupTheme">@style/ThemeOverlay.popupTheme</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbarSize">0dp</item>
    </style>

    //Added

    <style name="ThemeOverlay.popupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/colorItemBackground</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="rippleColor">@color/colorRipple</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAppearance">@style/normal_text</item>
    </style>

    <style name="normal_text" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/cerebri_sans_regular</item>
    </style>

    <style name="text_input_layout_style"
        parent = "@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">#EFFDFF</item>
        <item name="counterTextColor">@color/colorDisp</item>
        <item name="hintTextColor">@color/colorBlueDark</item>
        <item name="boxStrokeColor">@color/text_input_color_selector</item>
    </style>
    
    <style name="no_internet_bar" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/colorError</item>
        <item name="fontFamily">@font/inter_font</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/no_internet_text_padding</item>
        <item name="android:paddingEnd">@dimen/no_internet_text_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="TitleText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorBlue</item>
        <item name="elevation">1dp</item>
        <item name="lineHeight">30dp</item>
    </style>

    <style name="TitleTextDisabled" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="lineHeight">30dp</item>
    </style>

</resources>